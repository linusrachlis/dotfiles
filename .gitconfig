# This is Git's per-user configuration file.
[user]
    name = Linus Rachlis
    email = linus@rachlis.net
[core]
    autocrlf = input
    editor = nvim -u NORC

[merge]
    tool = nvim
[mergetool]
    keepBackup = false
    prompt = true
[mergetool "vscode"]
    cmd = code --wait $MERGED
[mergetool "nvim"]
    cmd = "nvim -d -c \"wincmd l\" -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\""
[diff]
    tool = nvim
[difftool]
    prompt = true
[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[alias]
    edit-config = config -e --global
    show-skipped = !git ls-files -v|grep '^S'
    skip = update-index --skip-worktree
    no-skip = update-index --no-skip-worktree
    show-dead-branches = !git branch -vv | grep 'origin/.*: gone]' | awk '{print $1}'
    remove-dead-branches = !git show-dead-branches | xargs git branch -D
    fpr = !git fetch --prune && git remove-dead-branches
    finished-feature = !git checkout main && git fpr && git merge
[grep]
    lineNumber = true
[push]
    autoSetupRemote = true
[init]
    defaultBranch = main
[include]
    path = ~/.gitconfig_extra
